{
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=app.db"
    },
    "Jwt": {
        "SecretKey": "a-string-secret-at-least-256-bits-long",
        "Issuer": "CleanArchitectureIssuer",
        "Audience": "CleanArchitectureAudience",
        "TokenValidityInMinutes": 60,
        "RefreshTokenValidityInDays": 7
    },
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.Span",
            "Serilog.Sinks.ApplicationInsights",
            "Serilog.Sinks.OpenTelemetry"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "ApplicationInsights",
                "Args": {
                    "connectionString": "",
                    "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
                }
            },
            {
                "Name": "OpenTelemetry",
                "Args": {
                    "Endpoint": "%OTEL_EXPORTER_OTLP_ENDPOINT%",
                    "Protocol": "Grpc", // "HttpProtobuf" if you use :4318
                    "ResourceAttributes": {
                        "service.name": "CleanArchitecture.Api",
                        "service.namespace": "CleanArchitecture",
                        "deployment.environment": "Production"
                    },
                    "IncludeFormattedMessage": true,
                    "IncludeScopes": false
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId",
            "Serilog.Enrichers.Span.Enricher, Serilog.Enrichers.Span"
        ],
        "Properties": {
            "Application": "CleanArchitecture"
        }
    },
    "AllowedHosts": "*"
}
